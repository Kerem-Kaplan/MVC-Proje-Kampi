@model EntityLayer.Concrete.Category

@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<br />
<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName)
        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
        <br /><br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextBoxFor(x => x.CategoryDecsription)
        @Html.ValidationMessageFor(x => x.CategoryDecsription, "", new { @class = "text-danger" })
        <br /><br />
        <button class="btn btn-outline-danger" id="button">Kaydet</button>

        <script>
            $('#button').click(function () {
                swal({
                    title: "Tebrikler!",
                    text: "Kategori başarılı bir şekilde eklendi.",
                    buttons: false,
                    icon: "success",
                    timer: 10000
                }).then(function () {
                    window.location.reload(true);
                    tr.hide();
                });
            });
        </script>
    </div>
}




